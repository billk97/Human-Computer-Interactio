<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grill">

    <Button
        android:id="@+id/GrillButtonStart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="182dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="31dp"
        android:text="Εναρξη"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GrillTempBar" />

    <SeekBar
        android:id="@+id/GrillTimeBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="10"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/GrillTempText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GrillTimeDisplay" />

    <TextView
        android:id="@+id/GrillTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Χρόνος"
        app:layout_constraintBottom_toTopOf="@+id/GrillTimeBar"
        app:layout_constraintEnd_toStartOf="@+id/GrillTimeDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Grillinformation"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:id="@+id/Grillinformation"
        android:layout_width="175dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="ΑΡΧΙΚΗ>GRILL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GrillTimeDisplay"
        android:layout_width="147dp"
        android:layout_height="66dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="44dp"
        app:layout_constraintBottom_toTopOf="@+id/GrillTimeBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toEndOf="@+id/GrillTimeText"
        app:layout_constraintTop_toBottomOf="@+id/Grillinformation"
        app:layout_constraintVertical_bias="1.0"
        tools:text="00:00" />

    <TextView
        android:id="@+id/GrillTempText"
        android:layout_width="109dp"
        android:layout_height="21dp"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:text="Θερμοκρασία"
        app:layout_constraintBottom_toTopOf="@+id/GrillTempBar"
        app:layout_constraintEnd_toStartOf="@+id/GrillTempDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GrillTimeBar" />

    <TextView
        android:id="@+id/GrillTempDisplay"
        android:layout_width="147dp"
        android:layout_height="71dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="TextView"
        android:textSize="44dp"
        app:layout_constraintBottom_toTopOf="@+id/GrillTempBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toEndOf="@+id/GrillTempText"
        app:layout_constraintTop_toBottomOf="@+id/GrillTimeBar"
        tools:text="00:00" />

    <SeekBar
        android:id="@+id/GrillTempBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="10"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/GrillButtonStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GrillTempDisplay"
        app:layout_constraintVertical_bias="0.532" />


</android.support.constraint.ConstraintLayout>