<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MicroPrograms"
    android:src="@drawable/bgma"
    android:scaleType = "centerCrop"
    android:background="@drawable/bgma"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/buttonRise"
        android:layout_width="118dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="36dp"
        android:text="ΡΥΖΙ"
        app:layout_constraintBottom_toTopOf="@+id/buttonVegetables"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonVegetables"
        android:layout_width="118dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="36dp"
        android:text="ΛΑΧΑΝΙΚΑ"
        app:layout_constraintBottom_toTopOf="@+id/buttonMeat"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonMeat"
        android:layout_width="118dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:text="ΚΡΕΑΣ"
        app:layout_constraintBottom_toTopOf="@+id/MicroProgramsBackButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MicroProgramsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="ΠΙΣΩ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonLiquid"
        android:layout_width="118dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="84dp"
        android:text="ΥΓΡΑ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonMeat" />

    <Button
        android:id="@+id/buttonPotatoe"
        android:layout_width="118dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="36dp"
        android:text="ΠΑΤΑΤΕΣ"
        app:layout_constraintBottom_toTopOf="@+id/buttonLiquid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonVegetables" />

    <Button
        android:id="@+id/buttonChicken"
        android:layout_width="118dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="36dp"
        android:text="ΚΟΤΟΠΟΥΛΟ"
        app:layout_constraintBottom_toTopOf="@+id/buttonPotatoe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonRise" />

    <Button
        android:id="@+id/buttonFish"
        android:layout_width="118dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="36dp"
        android:text="ΨΑΡΙ"
        app:layout_constraintBottom_toTopOf="@+id/buttonChicken"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonSpagheti" />

    <Button
        android:id="@+id/buttonSpagheti"
        android:layout_width="118dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="36dp"
        android:text="Ζυμαρικά"
        app:layout_constraintBottom_toTopOf="@+id/buttonRise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/informationPrograms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:text="ΑΡΧΙΚΗ>ΕΤΟΙΜΑ ΠΡΟΓΡΑΜΜΑΤΑ"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />
</android.support.constraint.ConstraintLayout>