<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MicroPrograms"
    android:src="@drawable/bgma"
    android:scaleType = "centerCrop"
    android:background="@drawable/bgma"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/buttonSpagheti"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pasta"
        app:layout_constraintBottom_toTopOf="@+id/buttonRise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/microMainButton"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/PastaText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="ΜΑΚΑΡΟΝΙΑ"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSpagheti" />

    <Button
        android:id="@+id/buttonRise"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/vegs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PastaText" />

    <Button
        android:id="@+id/buttonVegetables"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VegText" />

    <Button
        android:id="@+id/buttonMeat"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/meat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RiceText" />

    <Button
        android:id="@+id/MicroProgramsBackButton"
        android:layout_width="141dp"
        android:layout_height="63dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="ΠΙΣΩ"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MeatText" />

    <Button
        android:id="@+id/buttonLiquid"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PotatoText" />

    <Button
        android:id="@+id/buttonPotatoe"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/potato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChickenText" />

    <Button
        android:id="@+id/buttonChicken"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/chicken"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FishText" />

    <Button
        android:id="@+id/buttonFish"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/fish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/informationPrograms" />


    <Button
        android:id="@+id/informationPrograms"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="ΠΡΟΓΡΑΜΜΑΤΑ"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/microMainButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <Button
        android:id="@+id/microMainButton"
        android:layout_width="183dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ΑΡΧΙΚΗ"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />


    <TextView
        android:id="@+id/FishText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        android:text="ΨΑΡΙ"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFish" />

    <TextView
        android:id="@+id/VegText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="ΛΑΧΑΝΙΚΑ"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRise" />

    <TextView
        android:id="@+id/ChickenText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        android:text="ΚΟΤΟΠΟΥΛΟ"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChicken" />

    <TextView
        android:id="@+id/RiceText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="ΡΥΖΙ"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVegetables" />

    <TextView
        android:id="@+id/PotatoText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="ΠΑΤΑΤΕΣ"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintTop_toBottomOf="@+id/buttonPotatoe" />

    <TextView
        android:id="@+id/MeatText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:text="ΚΡΕΑΣ"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMeat" />

    <TextView
        android:id="@+id/LiqText"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        android:text="ΥΓΡΑ"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLiquid" />
</android.support.constraint.ConstraintLayout>